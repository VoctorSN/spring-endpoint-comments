{
    "name": "spring-endpoint-comments",
    "displayName": "Spring Endpoint Comments",
    "description": "Añade automáticamente comentarios con la ruta completa y placeholders tipados encima de @GetMapping/@PostMapping/@RequestMapping.",
    "version": "0.0.1",
    "publisher": "tu-nombre",
    "engines": {
        "vscode": "^1.75.0"
    },
    "activationEvents": [
        "onCommand:extension.addEndpointComment"
    ],
    "contributes": {
        "semanticTokenTypes": [
            {
                "id": "placeholder",
                "description": "Tipo para los placeholders de path",
                "superType": "parameter"
            }
        ],
        "semanticTokenModifiers": [],
        "semanticTokenScopes": [
            {
                "language": "java",
                "scopes": {
                    "placeholder": [
                        "variable.readonly"
                    ]
                }
            }
        ],
        "commands": [
            {
                "command": "extension.addEndpointComment",
                "title": "Añadir comentario de endpoint"
            }
        ],
        "keybindings": [
            {
                "command": "extension.addEndpointComment",
                "key": "ctrl+alt+e",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Spring Endpoint Comments",
            "properties": {
                "springEndpointComments.baseUrl": {
                    "type": "string",
                    "default": "https://localhost:9000",
                    "description": "URL base para armar la ruta completa del endpoint"
                }
            }
        }
    },
    "main": "./extension.js",
    "scripts": {
        "test": "echo \"No tests\""
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/VoctorSN/spring-endpoint-comments"
    },
    "license": "MIT"
}